{
  "manifest_version": 3,
  "name": "PrivaSee",
  "version": "1.0.0",
  "description": "Analyze privacy policies with AI-powered trust scores",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "PrivaSee - Analyze Privacy Policy"
  }
}
